{
  "name": "react-map-challenge",
  "version": "1.0.0",
  "description": "react google map with multiples pin and a slider",
  "repository": {
    "type": "git",
    "url": "https://github.com/morlombakop/typescript-react-google-map.git"
  },
  "author": "Morlo Mbakop",
  "license": "UNLICENSED",
  "main": "src/index.tsx",
  "scripts": {
    "develop": "concurrently -r \"npm:type-check:watch\" \"npm:start\"",
    "start:server": "node server",
    "start:fe": "parcel ./src/index.html",
    "start": "concurrently -k \"npm:start:server\" \"npm:start:fe\"",
    "test": "jest",
    "test:e2e": "start-server-and-test start http://localhost:1234 cy:run",
    "test:no-cache": "jest --no-cache",
    "test:coverage": "jest --coverage --no-cache",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "google-maps": "^3.3.0",
    "rc-slider": "^8.6.12",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.1"
  },
  "devDependencies": {
    "@react-mock/state": "^0.1.8",
    "@testing-library/react": "^8.0.1",
    "@types/faker": "^4.1.5",
    "@types/google-maps": "^3.2.1",
    "@types/jest": "^24.0.13",
    "@types/rc-slider": "^8.6.4",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/styled-components": "^4.1.15",
    "concurrently": "^4.1.0",
    "cypress": "^3.3.1",
    "faker": "^4.1.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.4.0",
    "jest-styled-components": "^6.3.1",
    "parcel": "^1.12.3",
    "prettier": "^1.16.4",
    "start-server-and-test": "^1.9.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.5.1",
    "whatwg-fetch": "^3.0.0"
  }
}
